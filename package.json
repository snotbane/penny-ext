{
  "name": "penny-ext",
  "displayName": "Penny Language",
  "description": "Provides syntax highlighting for `.pen` files to build your visual novel, dialogue trees, or what have you.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },

  "categories": [
    "Programming Languages"
  ],

  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showStringWordCount",
        "title": "Show String Word Count"
      }
    ],
    "languages": [
      {
        "id": "penny",
        "aliases": [
          "Penny",
          "penny"
        ],
        "extensions": [
          ".pen",
          ".penny"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "penny",
        "scopeName": "source.pen",
        "path": "./syntaxes/penny.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "typescript": "^5.8.3",
    "vscode": "^1.1.34"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snotbane/penny-ext.git"
    },
  "scripts": {
    "compile": "tsc -p ./"
  }
}
